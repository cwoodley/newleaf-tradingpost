<h1>Listing users</h1>

<table class="table">
  <tr>
    <th>Twitter</th>
    <th>Game Name</th>
    <th>Friend Code</th>
    <th>Fruit</th>
    <th>Notes</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><a href="http://twitter.com/<%= user.twitter %>" target="_blank">@<%= user.twitter %></a></td>
    <td><%= user.console_user %></td>
    <td><%= user.friend_code %></td>
    <td><%= user.fruit %></td>
    <td><%= user.notes %></td>
  </tr>
<% end %>
</table>

<br />



<% if user_signed_in? %>
  Logged in as <strong><%= current_user.username %></strong>.
  <%= link_to 'Edit profile', edit_user_registration_path, :class => "btn" %> |
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "btn" %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => "btn" %> |
  <%= link_to "Login", new_user_session_path, :class => "btn" %>
<% end %>

