<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true %></div>

  <div class="field"><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div class="field"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class="field"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="field">
    <%= f.label :friend_code %><br />
    <%= f.text_field :friend_code %>
  </div>
  <div class="field">
    <%= f.label :console_user %><br />
    <%= f.text_field :console_user %>
  </div>
  <div class="field">
    <%= f.label :fruit %><br />
    <%= f.text_field :fruit %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.text_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :twitter %><br />
    <%= f.text_field :twitter %>
  </div>
  <div class="actions">
    <%= f.submit "Sign Up", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
